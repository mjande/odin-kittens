<!DOCTYPE html>
<html>
  <head>
    <title>OdinKittens</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% flash.each do |type, msg| %>
      <% if type == 'success' %>
        <div style="color: green">
          <%= msg %>
        </div>
      <% elsif type == 'error' %>
        <div style="color: red">
          <% msg.each do |error_msg| %>
            <div><%= error_msg %> </div>
          <% end %>
        </div>
      <% else %>
        <div><%= msg %></div>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
